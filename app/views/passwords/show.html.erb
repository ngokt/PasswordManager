<h1 class ="title">PassWordrobe</h1>
    <div class="m-3">
        <nav class="nav justify-content-end">
            <%=link_to "一覧", passwords_path, class: "nav-link" %>
        </nav>
        <div class="container">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td><%= @password.id %></td>
                    </tr>
                    <tr>
                        <th>名称</th>
                        <td><%= @password.name%></td>
                    </tr>
                    <tr>
                        <th>ユーザーID</th>
                        <td> <%= @password.user_id%></td>
                    </tr>
                    <tr>
                        <th>メールアドレス</th>
                        <td> <%= @password.mail%></td>
                    </tr>
                    <tr>
                        <th>パスワード</th>
                        <td> <%= @password.password_digest%></td>
                    </tr>
                    <tr>
                        <th>メモ</th>
                        <td> <%= @password.memo%></td>
                    </tr>
                    <tr>
                        <th>作成日</th>
                        <td> <%= @password.created_at.strftime("%Y-%m-%d %H:%M")%></td>
                    </tr>
                    <tr>
                        <th>更新日</th>
                        <td> <%= @password.updated_at.strftime("%Y-%m-%d %H:%M")%></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
